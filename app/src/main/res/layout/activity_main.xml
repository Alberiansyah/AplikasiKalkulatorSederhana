                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:fontFamily="@font/alata"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:layout_margin="3dp"
                android:background="@color/white"
                android:text="3" />
            <Button
